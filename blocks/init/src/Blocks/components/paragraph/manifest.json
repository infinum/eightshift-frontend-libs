{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs/develop/schemas/component.json",
	"componentName": "paragraph",
	"title": "Paragraph",
	"componentClass": "paragraph",
	"example": {
		"attributes": {
			"paragraphContent": "This is paragraph",
			"paragraphSize": "regular",
			"paragraphColor": "black",
			"paragraphUse": true
		}
	},
	"attributes": {
		"paragraphContent": {
			"type": "string",
			"seo": true
		},
		"paragraphSize": {
			"type": "string",
			"default": "regular"
		},
		"paragraphColor": {
			"type": "string",
			"default": "black"
		},
		"paragraphUse": {
			"type": "boolean",
			"default": true
		}
	},
	"options": {
		"paragraphSize": [
			{
				"label": "Regular (16)",
				"value": "regular"
			},
			{
				"label": "Small (13)",
				"value": "small"
			},
			{
				"label": "Tiny (11)",
				"value": "tiny"
			},
			{
				"label": "Big (40)",
				"value": "big"
			},
			{
				"label": "Huge (60)",
				"value": "huge"
			}
		],
		"paragraphColor": [
			"primary",
			"black",
			"white",
			"green",
			"ocean",
			"yellow",
			"blue",
			"red",
			"cream",
			"mist",
			"dew",
			"eightshift"
		]
	},
	"variables": {
		"paragraphSize": {
			"regular": [
				{
					"variable": {
						"paragraph-font-size": "0.8rem",
						"paragraph-line-height": "1"
					}
				},
				{
					"breakpoint": "tablet",
					"variable": {
						"paragraph-font-size": "1rem"
					}
				}
			],
			"small": [
				{
					"variable": {
						"paragraph-font-size": "0.6rem",
						"paragraph-line-height": "1"
					}
				},
				{
					"breakpoint": "tablet",
					"variable": {
						"paragraph-font-size": "0.8rem"
					}
				}
			],
			"tiny": [
				{
					"variable": {
						"paragraph-font-size": "0.45rem",
						"paragraph-line-height": "1"
					}
				}
			],
			"big": [
				{
					"variable": {
						"paragraph-font-size": "1.5rem",
						"paragraph-line-height": "1"
					}
				},
				{
					"breakpoint": "tablet",
					"variable": {
						"paragraph-font-size": "2.5rem"
					}
				}
			],
			"huge": [
				{
					"variable": {
						"paragraph-font-size": "1.5rem",
						"paragraph-line-height": "1"
					}
				},
				{
					"breakpoint": "tablet",
					"variable": {
						"paragraph-font-size": "4.25rem"
					}
				}
			]
		},
		"paragraphColor": {
			"primary": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-primary)",
						"paragraph-link-color": "var(--global-colors-black)",
						"paragraph-link-color-hover": "var(--global-colors-blue)"
					}
				}
			],
			"black": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-black)",
						"paragraph-link-color": "var(--global-colors-primary)",
						"paragraph-link-color-hover": "var(--global-colors-blue)"
					}
				}
			],
			"green": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-green)",
						"paragraph-link-color": "var(--global-colors-white)",
						"paragraph-link-color-hover": "var(--global-colors-ocean)"
					}
				}
			],
			"ocean": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-ocean)",
						"paragraph-link-color": "var(--global-colors-white)",
						"paragraph-link-color-hover": "var(--global-colors-green)"
					}
				}
			],
			"yellow": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-yellow)",
						"paragraph-link-color": "var(--global-colors-white)",
						"paragraph-link-color-hover": "var(--global-colors-ocean)"
					}
				}
			],
			"blue": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-blue)",
						"paragraph-link-color": "var(--global-colors-black)",
						"paragraph-link-color-hover": "var(--global-colors-primary)"
					}
				}
			],
			"red": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-red)",
						"paragraph-link-color": "var(--global-colors-black)",
						"paragraph-link-color-hover": "var(--global-colors-blue)"
					}
				}
			],
			"cream": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-cream)",
						"paragraph-link-color": "var(--global-colors-yellow)",
						"paragraph-link-color-hover": "var(--global-colors-ocean)"
					}
				}
			],
			"white": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-white)",
						"paragraph-link-color": "var(--global-colors-yellow)",
						"paragraph-link-color-hover": "var(--global-colors-ocean)"
					}
				}
			],
			"eightshift": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-eightshift)",
						"paragraph-link-color": "var(--global-colors-blue)",
						"paragraph-link-color-hover": "var(--global-colors-primary)"
					}
				}
			],
			"dew": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-dew)",
						"paragraph-link-color": "var(--global-colors-ocean)",
						"paragraph-link-color-hover": "var(--global-colors-white)"
					}
				}
			],
			"mist": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-mist)",
						"paragraph-link-color": "var(--global-colors-ocean)",
						"paragraph-link-color-hover": "var(--global-colors-green)"
					}
				}
			]
		}
	}
}
